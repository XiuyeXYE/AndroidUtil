            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="test.nothingfor" />

                <category android:name="test.nothingfor" />
            </intent-filter>
        </receiver>

        <activity android:name=".BindServiceActivity" />

        <service
            android:name="com.xy.service.LocalService"
            android:enabled="true"
