<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/toMainActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="toMainActivity"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toCustomViewActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="toCustomViewActivity"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toSystemInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="toSystemInfo"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toComponentsActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="toComponentsActivity"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toPercentLayoutActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="toPercentLayoutActivity"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toFruitListViewActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="toFruitListViewActivity"
                android:textAllCaps="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toPercentLayoutActivityBtn" />

            <Button
                android:id="@+id/notificationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="notification"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/toRecyclerViewActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAllCaps="false"
                android:text="toRecyclerViewActivity" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>