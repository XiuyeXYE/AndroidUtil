<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreFileActivity">

    <EditText
        android:id="@+id/inputSaveDataToFileEditor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editor_bg"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:textColor="#00f"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveDataToFileBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="save" />

        <Button
            android:id="@+id/readDataFromFileBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:text="read" />
    </LinearLayout>

    <TextView
        android:id="@+id/outputReadDataFromFileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:hint="Output Content from EditText!"
        android:textColor="#0f0"
        android:text="" />

</LinearLayout>